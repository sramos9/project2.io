<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <a href="/" class="btn btn-default" role="button">Home</a>
        <a href="/posts" class="btn btn-default" role="button">All Posts</a>
        <a href="/wines" class="btn btn-default" role="button">Wine List</a>
        <a href="/posts/new" class="btn btn-default" role="button">Create Post</a>
        <a href="/sessions/logout" class="btn btn-default">Logout</a>
      </nav>
      <nav class="page-header">
        <h1><%=wine.name%></h1>
      </nav>
      <img src="<%=wine.image%>" alt="<%=wine.image%>" /><br>
      <%=wine.about%><br>

    </header>
    <main>
        <h2>Posts about <%=wine.name%></h2>
        <div class="row">
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <img src="<%=post.image%>">
              <div class="caption">
                <h3>Wino Comment:</h3>
                <p><%=post.about%></p>
                <p><a href="/posts/<%=post._id%>/edit" class="btn btn-default" role="button">Edit</a>
                  <form action="/posts/<%=post._id%>?_method=DELETE" method="POST">
                  <input class="btn btn-default" type="submit" value="Delete">
                </form>
                </p>
              </div>
            </div>
          </div>
        </div>
    </main>
  </body>
  <% include ../partials/footer.ejs %>
</html>
