<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>

  </head>
  <body>
    <header>
      <nav class="page-header">
        <h1>Wine About It <br><small>Posts</small> </h1>
      </nav>
      <nav class="navbar navbar-inverse">
        <a href="/" class="btn btn-default" role="button">Home</a>
        <a href="/posts" class="btn btn-default" role="button">All Posts</a>
        <a href="/wines" class="btn btn-default" role="button">Wine List</a>
        <a href="/posts/new" class="btn btn-default" role="button">Create Post</a>
        <a href="/sessions/logout" class="btn btn-default">Logout</a>
      </nav>
    </header>
    <main>
        <h2>All Posts</h2>

        <div class="row">
          <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
              <% for(let i = 0; i < posts.length; i++){ %>
              <div class="caption">
                <a href="/posts/<%=posts[i]._id%>" ><img src="<%=posts[i].image%>" class="btn btn-primary" role="button"/></a>
                 <h3>Wino comments:</h3>
                 <a href="/posts/<%=posts[i]._id%>"><%=posts[i].about%></a><hr>

                 <% } %>
              </div>
            </div>
          </div>

        </div>

    </main>
      <% include ../partials/footer.ejs %>
  </body>
</html>
