<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>

  </head>
  <body>
    <header>
      <div class="page-header">
        <h1>Wine About It - This Wine</h1>
      </div>
      <nav class="navbar navbar-inverse">
        <a href="/" class="btn btn-default" role="button">Home</a>
        <a href="/posts" class="btn btn-default" role="button">All Posts</a>
        <a href="/wines" class="btn btn-default" role="button">Wine List</a>
        <a href="/posts/new" class="btn btn-default" role="button">Create Post</a>
        <a href="/sessions/logout" class="btn btn-default">Logout</a>
      </nav>
    </header>
    <main>
        <section>
            <h2>Posts About <%=wine.name%>
            </h2>
            <img src="<%=wine.image%>" alt="<%=wine.name%>" />
            <p>
                <%=wine.about%>
            </p>

            <ul>
              <% for(let i = 0; i < wine.posts.length; i++) { %>
								<li>
                  <p>Username: <%=wine.posts[i].name%></p>
                  <a href="/posts/<%=wine.posts[i].id%>">
                    <img src="<%=wine.posts[i].image%>"/>
                  </a>
                  <p>
                    <a href="/posts/<%=wine.posts[i].id%>">
                      About this Wine:
                    </a>
                    <%=wine.posts[i].about%>
                  </p>
                  <a href="/posts/<%=wine.posts[i]._id%>/edit">Edit Posts</a>
                  <form action="/posts/<%=wine.posts[i]._id%>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete Post">
                  </form>
								</li>
							<% } %>
            </ul>

        </section>

    </main>
      <% include ../partials/footer.ejs %>
  </body>
</html>
